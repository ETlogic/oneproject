/* pages/numberQuery/numberQuery.wxss */
.baseview{
  width: 100%;
  height: 100vh;
  background: whitesmoke;
}
.topview{
  width: 100%;
  height: 7%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2px solid whitesmoke;
}

.bottomview{
  width: 100%;
  height: 92.5%;
  /* background: burlywood; */
  background-color: white;
}

.searchview{
  width: 80%;
  height: 60%;
  /* border-bottom: 1px solid red; */
  display: flex;
  justify-content: start;
  align-items: center;
  border-radius: 20px;
  background-color: whitesmoke;
}

.searchimg{
  width: 5%;
  height: 40%;
  margin-left: 10px;
}

.searchinput{
  width: 90%;
  height: 90%;
  /* border: 1px solid blue; */
  font-size: 15px;
  
}

.searchbtn{
  width: 20%;
  height: 40px;
  background: transparent;
  font-size: 15px;

}

.searchbtn::after{
  border: none;
}

.content{
  width: 100%;
  height: 100%;
  /* border: 1px solid red; */
  display:flex;
  flex-direction: column;
  align-items: center;
}

.cell1{
  width: 100%;
  height: 8%;
  /* border: 1px solid blue; */
  display: flex;
  align-items: center
}
.ctext1{
  width: 15%;
  height: 27px;
  line-height: 27px;
  font-size: 15px;
  border: 1px solid gainsboro;
  text-align: center;
  margin-left: 15px;
  border-radius: 20px 0px 0px 20px;
}

.ctext2{
  width: 75%;
  height: 27px;
  line-height: 27px;
  font-size: 15px;
  text-align: left;
  border: 1px solid gainsboro;
  background-color: whitesmoke;
  border-radius: 0px 20px 20px 0px;

}

.ctextbank1{
  width: 18%;
}