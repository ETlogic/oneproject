/* pages/weather/search/search.wxss */
.baseview{
  width: 100%;
  height: 100vh;
  background: whitesmoke;
}
.topview{
  width: 100%;
  height: 7%;
  background: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2px solid whitesmoke;
}

.bottomview{
  width: 100%;
  height: 90%;
  /* background: burlywood; */
  background-color: white;
}

.searchview{
  width: 80%;
  height: 60%;
  /* border-bottom: 1px solid red; */
  display: flex;
  justify-content: start;
  align-items: center;
  border-radius: 20px;
  background-color: whitesmoke;
}

.searchimg{
  width: 5%;
  height: 40%;
  margin-left: 10px;
}

.searchinput{
  width: 90%;
  height: 90%;
  /* border: 1px solid blue; */
  font-size: 15px;
  
}

.searchbtn{
  width: 20%;
  height: 40px;
  background: transparent;
  font-size: 15px;

}

.searchbtn::after{
  border: none;
}

.bview1{
  width: 100%;
  height: 20%;
  /* border: 1px solid red; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
}

.bview2{
  width: 100%;
  height: 35%;
  /* border: 1px solid blanchedalmond; */
  display: flex;
  flex-direction: column;
}

.titleview{
  /* border: 1px solid hotpink; */
  margin-bottom: 3%;
  font-size: 17px;
  margin-left: 10px;
}

.contentview{
    /* border: 1px solid salmon; */
    border-radius: 20px;
    width: 30%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 15px;
    background-color: whitesmoke;
    margin-left:10px;
}

.bview21{
  width: 100%;
  height: 70%;
  /* border: 1px solid red; */
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around;
  align-items: center; */
}