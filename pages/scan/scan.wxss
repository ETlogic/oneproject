/* pages/scan/scan.wxss */
.baseview{
  width: 100%;
  height: 100vh;
  background-color: white;
}

.topview{
  width: 100%;
  height: 6%;
  /* background-color: palegoldenrod; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid gainsboro;
}
.title{
  width:90%;
  height: 50px;
  line-height: 50px;
  /* border: 1px solid red; */
  text-align: center;
  padding-left: 10px;
  font-size: 17px;
}

.scanImg{
  width: 7.5%;
  height: 70%;
  /* border: 1px solid palevioletred; */
}

.bottomview{
  width: 100%;
  height: 94%;
  background-color: palegoldenrod;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}

.productInfo{
  width: 100%;
  height: 30%;
  border: 1px solid rebeccapurple;
  display: flex;
  flex-direction: column;
}

.infoDetail{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
    border: 1px solid honeydew;

}
